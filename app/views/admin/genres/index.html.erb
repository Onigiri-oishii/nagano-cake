<%= render "admin/home/header" %>

<div class="container">

	<div class="row">
		<h3 class="col-md-4 admin-genre-index-title">ジャンル追加・一覧</h3>
	</div>

	<!--ジャンル追加-->
	<%= form_for @genre,url: admin_genres_path, method: :post do |f| %>
	<%= render "devise/shared/error_messages", resource: @genre %>
	<div class="row">
		<label class="col-md-1 col-md-offset-1">ジャンル</label>
		<div class="col-md-2">
			<%= f.text_field :name %>
		</div>
		<div class="col-md-3">
			<div class="col-md-6">
				<span><%= f.radio_button :status, true %>有効</span>
				<span><%= f.radio_button :status, false %>無効</span>
			</div>
			<div class="col-md-6">
				<%= f.submit "追加",class: "btn btn-primary" %>
			</div>
		</div>
	</div>
	<% end %> 

	<!--ジャンル一覧表示-->
	<div class="row">
		<div class="col-md-5 col-md-offset-1">
			<table class="table">
				<tr class="admin-genre-index-trheader">
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>

				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><% if genre.status == true %>
						<p>有効</p>
						<% else %>
						<p>無効</p>
						<% end %>
					</td>
					<td><%= link_to "編集する",edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>


</div>
