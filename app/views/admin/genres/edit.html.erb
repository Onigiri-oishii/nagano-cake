<%= render "admin/home/header" %>

<div class="container">

	<div class="row">
		<h3 class="col-md-4 admin-genre-index-title">ジャンル編集</h3>
	</div>

	<%= form_for @genre,url: admin_genre_path(@genre.id) do |f| %>
	<div class="row">
		<label class="col-md-1 col-md-offset-1">ジャンル</label>
		<div class="col-md-2">
			<%= f.text_field :name%>
		</div>
		<div class="col-md-3">
			<div class="col-md-6">
				<label><%= f.radio_button :status, true %>有効</label>
				<label><%= f.radio_button :status, false %>無効</label>
			</div>
			<div class="col-md-6">
				<%= f.submit "変更を保存する",class: "btn btn-primary" %>
			</div>
		</div>
	</div>
	<% end %>
</div>