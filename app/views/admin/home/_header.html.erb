<header class="admin-header">
	<div class="admin-header-inner container">
		<!--管理者がログインしているか判別 → admin_signed_in?-->
		<% if admin_signed_in? %>
		<nav class="admin-header-nav">
			<ul class="admin-header-ul admin-header-clearfix">

					<li class="admin-header-li"><%= link_to "商品一覧",admin_products_path %></li>
					<li class="admin-header-li"><%= link_to "会員一覧",
						admin_users_path %></li>
					<li class="admin-header-li"><%= link_to "注文履歴一覧",
						admin_orders_path %></li>
					<li class="admin-header-li"><%= link_to "ジャンル管理",
						admin_genres_path %></li>
					<li class="admin-header-li"><%= link_to "ログアウト",
						destroy_admin_session_path , method: :delete %></li>
			</ul>
		</nav>

		<!--検索機能不要  要件定義書に指示有-->
		<div class="admin-header-search">
			<input placeholder="Search">
		</div>
		<% end %>


		<!--LOGO  必要なら画像に変更-->
		<span style="font-size:35px;border:black 1px solid;padding:5px 40px;">LOGO</span>


	</div>
</header>