<%= render "users/header" %>
<div class="container" id="user-top">
    <div class="row">
      
        <div class="col-md-3">
          <table class="table">
            <th class="text-center">ジャンル検索</th>
            <% @genres.each do |genre| %>
              <tr class="sideber-text-box">
                <td style="border: none" class="sidebar-text" >
                  <%= form_with(scope: :search, url: products_path, method: :get, local: true) do |f| %>
                  <%= f.hidden_field :genres_id, :value => genre.id %>
                  <%= hidden_field_tag :genres_id_var, genre.id %>
                  <%= f.submit genre.name, style: "border: none", class:"sideber-text-submit" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      
        <div class="col-md-9">
            <div class="row">
                <div class="main-visual">
                    <div class="col-md-10">
                        <h4 class="main-text">
                            ようこそ、NaganoCakeへ！<br>
                            このサイトは、ケーキ販売のECサイトになります。<br>
                            会員でない方も商品の閲覧はできますが、<br>
                            購入には会員登録が必要になります。
                        </h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 item-box", style="padding-left: 25px">
                    <h3>オススメ商品</h3>
                    <table>
                        <tr>
                            <% @random.each do |product| %>
                            <td style="padding-right: 15px">
                                <%= link_to (product) do %>
                                <%= attachment_image_tag product, :image, size: "160x110", fallback: "noimage.jpg" %><br>
                                <%= product.name %><br>
                                <% end %>
                                ¥<%= include_tax(product.no_tax) %><br>
                            </td>
                            <% end %>
                        </tr>
                    </table>
                    <div class="row">
                        <div class="col-md-2 col-md-offset-10">
                             <%= link_to "もっと見る>", products_path %>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12 item-box-bottom", style="padding-left:25px">
                    <h3>売れ筋ランキング</h3>
                    <table>
                        <tr>
                            <% @rank.each_with_index do |product,i| %>
                            <td style="padding-right: 15px">
                                <p><b><%= i+1 %>.</b></p>
                                <%= link_to (product) do %>
                                <%= attachment_image_tag product, :image, size: "160x110", fallback: "noimage.jpg" %><br>
                                <%= product.name %><br>
                                <% end %>
                                ¥<%= include_tax(product.no_tax) %><br>
                            </td>
                            <% end %>

                        </tr>
                    </table>
                </div>
            </div>
        </div><!-- col-md-9 end-->

    </div>
</div>

<%= render "users/footer" %>