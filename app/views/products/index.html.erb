
<%= render "users/header" %>

<div class="container" id="user-products-index">

  <div class="container main">
    <div class="row">
      <div class="col-md-3">
        <table class="table table-bordered">
          <th class="text-center">ジャンル検索</th>
          <% @genres.each do |genre| %>
            <%= form_with(scope: :search, url: products_path, method: :get, local: true) do |f| %>
            <%= f.hidden_field :genres_id, :value => genre.id %>
            <%= hidden_field_tag :genres_id_var, genre.id %>
            <tr><td><%= f.submit genre.name, class: "submit-bottan" %></td></tr>
          <% end %>
          <% end %>
        </table>
      </div>


      <div class="col-md-9">
        <h3 class="title">
          <% unless @genreid.nil? %>
            <%= @genres.find(@genreid).name %>
          <% else %>
            商品
          <% end %>
          一覧
          <span class="count">(全<%= @products.count %>件)</span>
        </h3>
        <div class="container item-box">
          <div class="row item-box-sizing">
          <% @products.each do |product| %>
            <div class="item-box-list">
              <%= link_to product_path(product) do %>
                <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "noimage.jpg", class:"item-box-image" %>
                <%= product.name %><br>
              <% end %>
              ¥<%= product.no_tax.to_s(:delimited) %>
            </div>
          <% end %>
          </div>

        <div class="paginate">
          <%= paginate @products %>
        </div>
      </div>
    </div>
  </div>



</div>

