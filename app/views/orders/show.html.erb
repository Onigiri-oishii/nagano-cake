<%= render "users/header" %>

<div class="container" id="user-order-show">
    <div class="row">
        <div class="col-md-3 col-md-offset-1">
            <h3 class="order-record-title">注文情報入力</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
        	<strong>注文情報</strong>
        	<table class="table table-bordered">
                <tbody>
        		    <tr>
                        <th class="col-md-3">注文日</th>
        		    	<td><%= l @order.created_at %></td>
                    </tr>
        		    <tr>
                        <th>配達先</th>
        		    	<td><%= @order.postal %><br>
        		    		<%= @order.address %><br>
        		    		<%= @order.name %>
        		    	</td>
                    </tr>
        		    <tr>
                        <th>支払方法</th>
        		    	<td><%= @order.way %></td>
                    </tr>
        		    <tr>
                        <th>ステータス</th>
        		    	<td><%= @order.order_status %></td>
                    </tr>
                </tbody>
        	</table>
        </div>
        <div class="col-md-4">
        	<strong>請求情報</strong>
        	<table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>商品合計</th>
        		     	<td><%= @order.total_products.to_s(:delimited, delimiter: ',') %></td>
                    </tr>
                    <tr>
                        <th>配送料</th>
        		     	<td><%= @order.fee %></td>
                    </tr>
                    <tr>
                        <th>ご請求金額</th>
        		     	<td><%= @order.total_pay.to_s(:delimited, delimiter: ',') %></td>
                    </tr>
                </tbody>
        	</table>
        </div>
    </div>
    <div class="row">
    	<div class="col-md-9">
    		<strong>注文内容</strong>
    		<table class="table table-bordered">
                <tr>
    			    <th class="col-md-6">商品</th>
                    <th class="col-md-2">単価（税込）</th>
                    <th class="col-md-1">個数</th>
                    <th class="col-md-2">小計</th>
                </tr>
                <% @order.order_products.each do |order_product| %>
                <tbody>
                    <td><%= order_product.product.name %></td>
                    <td><%= order_product.price.to_s(:delimited, delimiter: ',') %></td>
                    <td><%= order_product.number %></td>
                    <td><%= (order_product.price * order_product.number).to_s(:delimited, delimiter: ',') %></td>
                </tbody>
                <% end %>
    		</table>
    	</div>
    </div>
</div>

<%= render "users/footer" %>