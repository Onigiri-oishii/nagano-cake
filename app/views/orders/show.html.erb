<%= render "users/header" %>

<div class="container" id="user-order-show">
    <div class="row">
        <div class="col-md-6">
        	<h3 style="margin-left: 30px; ">注文履歴詳細</h3>
        		<strong>注文情報</strong>
        			<table class="table table-bordered">
                        <tbody>
        				    <tr>
                                <th>注文日</th>
        				    	<td><%= @order.created_at %></td>
                            </tr>
        				    <tr>
                                <th>配達先</th>
        				    	<td><%= @order.postal %><br>
        				    		<%= @order.address %><br>
        				    		<%= @order.name %>
        				    	</td>
                            </tr>
        				    <tr>
                                <th>支払方法</th>
        				    	<td><%= @order.way %></td>
                            </tr>
        				    <tr>
                                <th>ステータス</th>
        				    	<td><%= @order.order_status %></td>
                            </tr>
                        </tbody>
        			</table>
        </div>
        <div class="col-md-6", style="padding-top: 55px">
        	<strong>請求情報</strong>
        		<table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>商品合計</th>
        			     	<td><%= @order.total_products %></td>
                        </tr>
                        <tr>
                            <th>配送料</th>
        			     	<td><%= @order.fee %></td>
                        </tr>
                        <tr>
                            <th>ご請求金額</th>
        			     	<td><%= @order.total_pay %></td>
                        </tr>
                    </tbody>
        		</table>
        </div>
    </div>
    <div class="row">
    	<div class="col-md-7">
    		<strong>注文内容</strong>
    			<table class="table table-bordered">
                    <tr>
    				    <th>商品</th><th>単価(税込)</th><th>個数</th><th>小計</th>
                    </tr>
                    <tbody>
                        <% @order.order_products.each do |order_product| %>
                            <td><%= order_product.product.name %></td>
                            <td><%= order_product.price %></td>
                            <td><%= order_product.number %></td>
                            <td><%= order_product.price * order_product.number %></td>
                        <% end %>
                    </tbody>
    			</table>
    	</div>
    </div>
</div>