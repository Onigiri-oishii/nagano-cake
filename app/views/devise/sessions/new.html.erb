<%= render "users/header" %>

<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <h4 style="margin: 30px 0px 30px 0px; padding-left: 10px; background-color: rgba(192,192,192,0.5);">会員の方はこちらからログイン</h4>
    </div>
  </div>

  <!--メールアドレス、パスワード、ログインボタン-->
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <table class="user-login-table">

        <tr class="field">
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr class="field">  
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr> 

      </table>

      <div class="actions">
        <%= f.submit "ログイン" ,class: "btn btn-info"%>
      </div>

      <% end %>
    </div>
  </div> <!--row-->


  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <h4 style="margin: 30px 0px 30px 0px; padding-left: 10px; background-color: rgba(192,192,192,0.5);">登録がお済みでない方</h4>
    </div> 
  </div>

  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <p><%= link_to "こちら",new_user_registration_path %>  から新規登録を行ってください。</p>
    </div> 
  </div>

</div>

<%= render "users/footer" %>


