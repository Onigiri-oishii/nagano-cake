
<div class="container">

  <span class="row">
    <h4 class="col-md-2" style="margin: 30px 0px 30px 150px; padding-left: 10px; background-color: rgba(192,192,192,0.5);">新規会員登録</h4>
  </span> 

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row" style="padding: 5px;">
      <div class="col-md-2 col-md-offset-1">名前</div>
      <div class="col-md-1">(姓)</div>
      <div class="col-md-2"><%= f.text_field :lastname %></div>
      <div class="col-md-1">(名)</div>
      <div class="col-md-2"><%= f.text_field :firstname %></div>
    </div>

    <div class="row" style="padding: 5px;">
      <div class="col-md-2 col-md-offset-1">フリガナ</div>
        <div class="col-md-1">(セイ)</div>
        <div class="col-md-2"><%= f.text_field :lastname %></div>
        <div class="col-md-1">(メイ)</div>
        <div class="col-md-2"><%= f.text_field :firstname %></div>
    </div>

    <div class="row" style="padding: 5px;">
      <div class="col-md-3 col-md-offset-1">メールアドレス</div>
        <div class="col-md-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row" style="padding: 5px;">
      <div class="col-md-3 col-md-offset-1">郵便番号(ハイフンなし)</div>
        <div class="col-md-2"><%= f.text_field :postal %></div>
    </div>

    <div class="row" style="padding: 5px;">
      <div class="col-md-3 col-md-offset-1">住所</div>
        <div class="col-md-5"><%= f.text_field :address, :size=>"61" %></div>
    </div>

    <div class="row" style="padding: 5px;">
      <div class="col-md-3 col-md-offset-1">電話番号(ハイフンなし)</div>
        <div class="col-md-2"><%= f.telephone_field :telephone %></div>
    </div>

    <div class="row" style="padding: 5px;">
      <div class="col-md-3 col-md-offset-1">パスワード(6文字以上)</div>
        <div class="col-md-2"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="row" style="padding: 5px;">
      <div class="col-md-3 col-md-offset-1">パスワード(確認用)</div>
        <div class="col-md-2"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="row">
      <div class="col-md-3 col-md-offset-5" style="margin-top: 20px;">
        <%= f.submit "新規登録", class: "btn btn-success btn-block " %>
      </div>
    </div>
  <% end %>

    <span class="row">
      <h4 class="col-md-2" style="margin: 30px 0px 30px 150px; padding-left: 10px; background-color: rgba(192,192,192,0.5);">既に登録済みの方</h4>
    </span> 

    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <%= link_to "こちら", new_registration_path(resource_name) %>からログインしてください。
      </div>
    </div>

</div>



